{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES2022",
		"lib": [
			"ES2022.RegExp",
			"DOM"
		],
		"outDir": "out",
		"sourceMap": true,
		"strict": true,
		"rootDir": ".",
		"moduleResolution": "node",
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"esModuleInterop": true,
		"noUnusedParameters": true,
	},
	"include": [
		"src/**/*.ts",
		"tests/**/*.ts"
	],
	"exclude": [
		"node_modules",
		".yarn"
	]
}
